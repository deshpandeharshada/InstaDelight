            </label>*@

        <label>
            @Global.InstaDelight.UserName
            @Html.TextBoxFor(m => m.UserName, new { @Value = ViewBag.UserName, @class = "textbox", @readonly = "readonly", @placeholder = @Global.InstaDelight.UserName })
        </label>

        <label>
            @Global.InstaDelight.Password
            @Html.PasswordFor(m => m.Password, new { @class = "textbox", @placeholder = @Global.InstaDelight.PasswordPrompt })
        </label>

        <label>
            @Global.InstaDelight.Confirmpassword
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "textbox", @placeholder = @Global.InstaDelight.Confirmpassword })
        </label>

        <input type="submit" class="button" value="@Global.InstaDelight.Reset" style="width:100%; border-radius:5px;" />

    </div>


}

