@model ConsumerApp.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = @Global.Consumer.ForgotPassword;
}
<link rel="stylesheet" href="~/Content/fonts/opensans/css/fonts.css">
<link rel="stylesheet" href="~/Content/css/foundation.css">

<link rel="stylesheet" href="~/Content/css/font-awesome.min.css">

<div class="header red text-center">
    @Global.Consumer.ForgotPassword
</div>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row rowb">
        <p style="color:#CC3333;">@Global.Consumer.ForgotPasswordCaption</p>
        @Html.ValidationSummary("", new { @class = "text-danger", @style = "color:red" })
       
        <label>
            @Global.Consumer.MobileNo
        </label>
        <div class="small-4 column">
            @Html.DropDownListFor(m => m.CountryCode,
               new SelectList(ViewBag.CountryList,
                                    "CountryCode",
                                    "CountryCode",
                                     ViewBag.DefaultCountryCode),
                                  new { @class = "dropdown" })
        </div>
        <div class="small-8 column">
            @Html.TextBoxFor(m => m.Phone, new { @class = "textbox", @PlaceHolder = @Global.Consumer.MobileNo })
        </div>

        <label><b>@Global.Consumer.Or</b></label>
        <label>
            @Global.Consumer.Email
        </label>
        <label>
            @Html.TextBoxFor(m => m.Email, new { @class = "textbox", @PlaceHolder = @Global.Consumer.Email })
        </label>


        <input type="submit" class="button" style="width:100%; border-radius:5px;" value="@Global.Consumer.SendSMSEmail" />
    </div>

    <div class="footer red text-center" style="color:white;" ng-controller="myCntrl">
        <div class="small-12 columns">
            <div class="small-6 columns">
                <a href=@Url.Action("Index", "Home") style="color:white">
                    <i class="fa fa-home fa-2x" aria-hidden="true"></i>
                </a>
            </div>
            <div class="small-6 columns">
                <a ng-click="NavigateBack()" style="color:white"><i class="fa fa-caret-left fa-2x" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
