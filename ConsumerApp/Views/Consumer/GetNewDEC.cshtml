@{
    ViewBag.Title = "GetNewDEC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/fonts/opensans/css/fonts.css">
<link rel="stylesheet" href="~/Content/css/foundation.css">

<link rel="stylesheet" href="~/Content/css/font-awesome.min.css">


<div ng-controller="myCntrl" ng-app="app" data-ng-init="openGetNewDECForm()">
    <div class="header red text-center">
        @Global.Consumer.GetNewDEC
    </div>
    <div class="row rowb">


        <div class="row">
            <form name="getDecForm">
                @if (ViewBag.ConsumerPhone == "")
                {
                    <label>
                        @Global.Consumer.YourMobileNo:
                    </label>
                    <div class="small-4 column">
                        <select style="border-radius:4px;" ng-model="selectedcountrycodeobject" id="ddlCountryCode" name="ddlCountryCode" ng-required="true"
                                ng-selected="country.countryid == countryid"
                                ng-options="country.CountryCode for country in CountryList track by country.countryid">
                            <option value="" label="@Global.Consumer.CountryCode"></option>
                        </select>
                    </div>
                    <div class="small-8 column">
                        <input name="mobile" type="text" class="textbox" placeholder="@Global.Consumer.YourMobileNo" ng-model="MobileNo">
                    </div>
                }
                <input type="hidden" ng-model="MobileNo" id="hdnConsumerPhone" name="hdnConsumerPhone" value="@ViewBag.ConsumerPhone" />
                <label>
                    @Global.Consumer.BusinessMobileNo:
                </label>
                <div class="small-4 column">
                    <select style="border-radius:4px;" ng-model="selectedMerchantcountrycodeobject" id="ddlMCountryCode" name="ddlMCountryCode" ng-required="true"
                            ng-selected="country.countryid == countryid"
                            ng-options="country.CountryCode for country in CountryList track by country.countryid">
                        <option value="" label="@Global.Consumer.CountryCode"></option>
                    </select>
                </div>
                <div class="small-8 column">
                    <input name="businessmobile" type="text" class="textbox" placeholder="@Global.Consumer.BusinessMobileNo" ng-model="BusinessMobileNo">
                </div>


                <button class="button" style="width:100%; border-radius:5px;" ng-click="GetDECFromMerchant('getDecForm')">@Global.Consumer.GetNewDEC</button>
            </form>
        </div>
    </div>

    <div class="footer red text-center" style="color:white;" ng-controller="myCntrl">
        <div class="small-12 columns">
            <div class="small-6 columns">
                <a href=@Url.Action("Index", "Home") style="color:white">
                    <i class="fa fa-home fa-2x" aria-hidden="true"></i>
                </a>
            </div>
            <div class="small-6 columns">
                <a ng-click="NavigateBack()" style="color:white"><i class="fa fa-caret-left fa-2x" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>

</div>
