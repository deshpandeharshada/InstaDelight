@{
    ViewBag.Title = "SelectGroups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/fonts/opensans/css/fonts.css">
<link rel="stylesheet" href="~/Content/css/foundation.css">

<link rel="stylesheet" href="~/Content/css/font-awesome.min.css">

<div class="row rowb" ng-controller="myCntrl" ng-app="myApp" data-ng-init="GetGroups()">
    <div class="row">
        <h3>@Global.Merchant.SelectGroups</h3>
        <div class="medium-6 columns">
            <form name="myForm" method="post">

                <input type="hidden" ng-model="CouponId" id="hdnCouponId" name="hdnCouponId" value="@ViewBag.CouponId" />

                <table class="table-layout" style="width:100%;padding:0px;">
                    <tr>
                        <td style="width:25%">
                            <input type="checkbox" name="type" value="Select All" ng-model="selectAll" ng-click="selectedAll()" />
                        </td>
                        <td style="width:75%">
                            @Global.Merchant.GroupName
                        </td>
                    </tr>
                </table>

                <table class="table-layout" style="height:250px;width:100%;padding:0px;overflow-y:auto;overflow-x:auto;">
                    <tr ng-repeat="group in groups">
                        <td style="width:25%;vertical-align:top">
                            <input type="checkbox" ng-checked="group.selected" ng-model="group.selected" />
                        </td>
                        <td style="width:75%;text-align:left;vertical-align:top">
                            {{group.GroupName}}
                        </td>
                    </tr>
                </table>

                <input type="button" ng-click="sendSelectedGroups()" value=@Global.Merchant.Send />
            </form>
        </div>
        <div>
            <label>
                <b> @ViewBag.result</b>
            </label>
        </div>
    </div>
</div>
