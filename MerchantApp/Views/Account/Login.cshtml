@using MerchantApp.Models

@model LoginViewModel
@{
    ViewBag.Title = @Global.Merchant.Login;
}
<link rel="stylesheet" href="~/Content/fonts/opensans/css/fonts.css">
<link rel="stylesheet" href="~/Content/css/foundation.css">

<link rel="stylesheet" href="~/Content/css/font-awesome.min.css">

<div class="header red text-center">
    @Global.Merchant.MerchantLogin
</div>
<div class="row rowb">
    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "color:red" })
            <div class="row text-center">
                <img src="~/Images/logo.png" />
            </div>
            <div class="small-12 columns">
                <label>
                    @Global.Merchant.MobileNo
                </label>

                <div class="small-4 column">
                    @Html.DropDownListFor(m => m.CountryCode,
               new SelectList(ViewBag.CountryList,
                                    "CountryCode",
                                    "CountryCode",
                                     ViewBag.DefaultCountryCode),
                                  new { @class = "dropdown" })
                </div>
                <div class="small-8 column">
                    @Html.TextBoxFor(m => m.MobileNo, new { @class = "textbox", @PlaceHolder = @Global.Merchant.MobileNo })
                </div>

                <label class="text-center"><b>@Global.Merchant.Or</b></label>

                <label>
                    @Global.Merchant.Email
                </label>
                <label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "textbox", @PlaceHolder = @Global.Merchant.Email })
                </label>

                <label>
                    @Global.Merchant.Password
                    @Html.PasswordFor(m => m.Password, new { @class = "textbox" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", @style = "color:red" })
                </label>

                <label>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Global.Merchant.RememberMe
                </label>

                <input type="submit" name="submit" value="@Global.Merchant.Login" class="button" style="width:100%; border-radius:4px;" />

                <label class="text-center">
                    @Html.ActionLink(@Global.Merchant.ForgotPassword, "ForgotPassword", null, null)
                </label>

                <label class="text-center">
                    <a href="http://www.offertraker.com/merchant-terms.html" style="color:black">@Global.Merchant.TermsOfUse</a>
                </label>

                @*<label class="text-center">
                    <a href="http://offertraker.in/admin/merchant-registration.php">@Global.Merchant.Registernewmerchant</a>
                </label>*@
            </div>
        }
    </section>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}